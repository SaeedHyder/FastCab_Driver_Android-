<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_pendingRidesDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/x15"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_pickupTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:orientation="horizontal">

            <com.app.fastcabdriver.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick-up Time"
                app:typeface="Roboto-Regular.ttf"/>

            <com.app.fastcabdriver.ui.views.AnyTextView
                android:id="@+id/txt_pickpTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:text="eta 01:36 PM"
                android:textColor="@color/black"
                app:typeface="Roboto-Regular.ttf"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pickup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:orientation="horizontal">

            <com.app.fastcabdriver.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick-up"
                app:typeface="Roboto-Regular.ttf"/>

            <com.app.fastcabdriver.ui.views.AnyTextView
                android:id="@+id/txt_pickup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:text="Dunkin Donut"
                android:textColor="@color/black"
                app:typeface="Roboto-Regular.ttf"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_DropOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:orientation="horizontal">

            <com.app.fastcabdriver.ui.views.AnyTextView
                android:id="@+id/anyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drop-off"
                app:typeface="Roboto-Regular.ttf"/>

            <com.app.fastcabdriver.ui.views.AnyTextView
                android:id="@+id/txt_dropOff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:text="Publix Super Market"
                android:textColor="@color/black"
                app:typeface="Roboto-Regular.ttf"/>


        </LinearLayout>

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8"
            android:layout_marginBottom="@dimen/x15"
            android:text="@string/accept"
            android:textColor="@color/white"
            android:background="@color/button_color"/>

        <Button
            android:id="@+id/btn_reject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reject"
            android:textColor="@color/white"
            android:background="@color/grayButton"/>


    </LinearLayout>

</LinearLayout>